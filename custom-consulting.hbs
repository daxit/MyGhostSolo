{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
        <section class="gh-consulting-header gh-canvas">
            <h1 class="gh-article-title">Technology Consulting Services</h1>
            <p class="gh-article-excerpt">Strategic guidance and implementation expertise to transform your business through technology</p>
        </section>

        <div class="gh-consulting-sections">
            <!-- Technology Transformation Section -->
            <section class="gh-consulting-section tech-transform-section">
                <div class="gh-consulting-section-content">
                    <h2>Technology Transformation</h2>
                    <p class="gh-consulting-section-intro">Modernize your technology infrastructure and accelerate digital transformation initiatives with proven expertise in cloud migration and emerging technologies.</p>
                    
                    <ul class="gh-consulting-features">
                        <li>Enterprise-scale cloud migration strategies</li>
                        <li>Open RAN implementation and optimization</li>
                        <li>Legacy system modernization</li>
                        <li>Technology stack assessment and roadmapping</li>
                    </ul>
                    
                    <div class="gh-consulting-stats">
                        <div class="gh-stat">
                            <span class="gh-stat-value">$300M+</span>
                            <span class="gh-stat-label">Transformation Projects</span>
                        </div>
                        <div class="gh-stat">
                            <span class="gh-stat-value">$14B</span>
                            <span class="gh-stat-label">Open RAN Implementation</span>
                        </div>
                    </div>
                </div>
                <div class="gh-consulting-section-graphic">
                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <!-- Background gradient -->
                        <defs>
                            <linearGradient id="tech-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#8b5e3c;stop-opacity:0.2"/>
                                <stop offset="100%" style="stop-color:#8b5e3c;stop-opacity:0.1"/>
                            </linearGradient>
                            
                            <!-- Glow effect -->
                            <filter id="tech-glow">
                                <feGaussianBlur stdDeviation="1" result="coloredBlur"/>
                                <feMerge>
                                    <feMergeNode in="coloredBlur"/>
                                    <feMergeNode in="SourceGraphic"/>
                                </feMerge>
                            </filter>
                        </defs>

                        <!-- Background shape -->
                        <circle cx="100" cy="100" r="90" fill="url(#tech-gradient)"/>

                        <!-- Server racks -->
                        <g transform="translate(60,40)" stroke="#8b5e3c" stroke-width="2">
                            <rect x="0" y="0" width="80" height="120" fill="none" rx="4"/>
                            <line x1="0" y1="30" x2="80" y2="30"/>
                            <line x1="0" y1="60" x2="80" y2="60"/>
                            <line x1="0" y1="90" x2="80" y2="90"/>
                            
                            <!-- Animated server lights -->
                            <g fill="#8b5e3c">
                                <circle cx="70" cy="15" r="3">
                                    <animate attributeName="opacity" values="1;0.3;1" dur="1s" repeatCount="indefinite"/>
                                </circle>
                                <circle cx="70" cy="45" r="3">
                                    <animate attributeName="opacity" values="1;0.3;1" dur="1s" repeatCount="indefinite" begin="0.3s"/>
                                </circle>
                                <circle cx="70" cy="75" r="3">
                                    <animate attributeName="opacity" values="1;0.3;1" dur="1s" repeatCount="indefinite" begin="0.6s"/>
                                </circle>
                                <circle cx="70" cy="105" r="3">
                                    <animate attributeName="opacity" values="1;0.3;1" dur="1s" repeatCount="indefinite" begin="0.9s"/>
                                </circle>
                            </g>
                        </g>

                        <!-- Cloud symbol -->
                        <g transform="translate(100,70)" filter="url(#tech-glow)">
                            <path d="M30,20 Q40,10 50,20 Q60,10 70,20 Q80,20 80,30 Q80,40 70,40 L30,40 Q20,40 20,30 Q20,20 30,20" 
                                  fill="none" 
                                  stroke="#8b5e3c" 
                                  stroke-width="2">
                                <animate attributeName="d" 
                                         values="M30,20 Q40,10 50,20 Q60,10 70,20 Q80,20 80,30 Q80,40 70,40 L30,40 Q20,40 20,30 Q20,20 30,20;
                                                 M30,22 Q40,12 50,22 Q60,12 70,22 Q80,22 80,32 Q80,42 70,42 L30,42 Q20,42 20,32 Q20,22 30,22;
                                                 M30,20 Q40,10 50,20 Q60,10 70,20 Q80,20 80,30 Q80,40 70,40 L30,40 Q20,40 20,30 Q20,20 30,20" 
                                         dur="3s" 
                                         repeatCount="indefinite"/>
                            </path>
                        </g>

                        <!-- Data transfer animation -->
                        <g stroke="#8b5e3c" stroke-width="2">
                            <line x1="60" y1="100" x2="140" y2="100" stroke-dasharray="5,5">
                                <animate attributeName="stroke-dashoffset" 
                                         values="0;-20" 
                                         dur="1s" 
                                         repeatCount="indefinite"/>
                            </line>
                        </g>
                    </svg>
                </div>
            </section>

            <!-- Solutions Engineering Section -->
            <section class="gh-consulting-section solutions-engineering-section reverse">
                <div class="gh-consulting-section-content">
                    <h2>Solutions Engineering</h2>
                    <p class="gh-consulting-section-intro">Design and implement scalable, cloud-native solutions that drive operational efficiency and enable business agility.</p>
                    
                    <ul class="gh-consulting-features">
                        <li>Cloud-native architecture design</li>
                        <li>Infrastructure automation</li>
                        <li>DevOps transformation</li>
                        <li>Performance optimization</li>
                    </ul>
                    
                    <div class="gh-consulting-stats">
                        <div class="gh-stat">
                            <span class="gh-stat-value">55%</span>
                            <span class="gh-stat-label">Cost Efficiency Improvement</span>
                        </div>
                        <div class="gh-stat">
                            <span class="gh-stat-value">3x</span>
                            <span class="gh-stat-label">Deployment Speed Increase</span>
                        </div>
                    </div>
                </div>
                <div class="gh-consulting-section-graphic">
                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <linearGradient id="solutions-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#c8d6af;stop-opacity:0.2"/>
                                <stop offset="100%" style="stop-color:#c8d6af;stop-opacity:0.1"/>
                            </linearGradient>
                        </defs>

                        <!-- Background -->
                        <rect x="20" y="20" width="160" height="160" fill="url(#solutions-gradient)" rx="10"/>

                        <!-- Grid pattern -->
                        <g stroke="#c8d6af" stroke-width="0.5" opacity="0.3">
                            <path d="M40,40 h120 M40,80 h120 M40,120 h120 M40,160 h120"/>
                            <path d="M40,40 v120 M80,40 v120 M120,40 v120 M160,40 v120"/>
                        </g>

                        <!-- Animated gears -->
                        <g transform="translate(100,100)">
                            <path d="M0,-30 L5,-20 L15,-25 L20,-15 L30,-20 L25,-10 L35,-5 L30,5 L40,10 L25,15 L30,25 L20,20 L15,30 L5,20 L0,30 L-5,20 L-15,25 L-20,15 L-30,20 L-25,10 L-35,5 L-30,-5 L-40,-10 L-25,-15 L-30,-25 L-20,-20 L-15,-30 L-5,-20 Z" 
                                  fill="#c8d6af" 
                                  opacity="0.8">
                                <animateTransform attributeName="transform"
                                                  type="rotate"
                                                  from="0 0 0"
                                                  to="360 0 0"
                                                  dur="10s"
                                                  repeatCount="indefinite"/>
                            </path>
                        </g>

                        <!-- Code blocks -->
                        <g transform="translate(50,70)">
                            <rect x="0" y="0" width="60" height="4" fill="#c8d6af" rx="2">
                                <animate attributeName="width" values="60;40;60" dur="3s" repeatCount="indefinite"/>
                            </rect>
                            <rect x="0" y="10" width="40" height="4" fill="#c8d6af" rx="2">
                                <animate attributeName="width" values="40;50;40" dur="3s" repeatCount="indefinite" begin="1s"/>
                            </rect>
                            <rect x="0" y="20" width="50" height="4" fill="#c8d6af" rx="2">
                                <animate attributeName="width" values="50;30;50" dur="3s" repeatCount="indefinite" begin="2s"/>
                            </rect>
                        </g>
                    </svg>
                </div>
            </section>

            <!-- SRE & Operations Section -->
            <section class="gh-consulting-section sre-operations-section">
                <div class="gh-consulting-section-content">
                    <h2>SRE & Operations Support</h2>
                    <p class="gh-consulting-section-intro">Build and optimize world-class operations teams and processes that ensure reliability, scalability, and exceptional service delivery.</p>
                    
                    <ul class="gh-consulting-features">
                        <li>SRE practice implementation</li>
                        <li>Global operations center design</li>
                        <li>Service level optimization</li>
                        <li>Team building and training</li>
                    </ul>
                    
                    <div class="gh-consulting-stats">
                        <div class="gh-stat">
                            <span class="gh-stat-value">90%</span>
                            <span class="gh-stat-label">CSAT Improvement</span>
                        </div>
                        <div class="gh-stat">
                            <span class="gh-stat-value">9</span>
                            <span class="gh-stat-label">Global Excellence Centers</span>
                        </div>
                    </div>
                </div>
                <div class="gh-consulting-section-graphic">
                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <linearGradient id="ops-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#d6bbb1;stop-opacity:0.2"/>
                                <stop offset="100%" style="stop-color:#d6bbb1;stop-opacity:0.1"/>
                            </linearGradient>
                        </defs>

                        <!-- Background circle -->
                        <circle cx="100" cy="100" r="90" fill="url(#ops-gradient)"/>

                        <!-- Monitoring graph -->
                        <g transform="translate(40,100)" fill="none" stroke="#d6bbb1" stroke-width="2">
                            <path d="M0,0 L20,-20 L40,-10 L60,-30 L80,-15 L100,-40 L120,-20">
                                <animate attributeName="d" 
                                         values="M0,0 L20,-20 L40,-10 L60,-30 L80,-15 L100,-40 L120,-20;
                                                 M0,0 L20,-15 L40,-25 L60,-20 L80,-35 L100,-25 L120,-30;
                                                 M0,0 L20,-20 L40,-10 L60,-30 L80,-15 L100,-40 L120,-20" 
                                         dur="5s" 
                                         repeatCount="indefinite"/>
                            </path>
                        </g>

                        <!-- Status indicators -->
                        <g transform="translate(60,60)">
                            <circle cx="0" cy="0" r="5" fill="#d6bbb1">
                                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite"/>
                                <animate attributeName="opacity" values="1;0.5;1" dur="2s" repeatCount="indefinite"/>
                            </circle>
                            <circle cx="40" cy="0" r="5" fill="#d6bbb1">
                                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite" begin="0.6s"/>
                                <animate attributeName="opacity" values="1;0.5;1" dur="2s" repeatCount="indefinite" begin="0.6s"/>
                            </circle>
                            <circle cx="80" cy="0" r="5" fill="#d6bbb1">
                                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite" begin="1.2s"/>
                                <animate attributeName="opacity" values="1;0.5;1" dur="2s" repeatCount="indefinite" begin="1.2s"/>
                            </circle>
                        </g>

                        <!-- Rotating metrics -->
                        <g transform="translate(100,100)">
                            <circle cx="0" cy="0" r="40" fill="none" stroke="#d6bbb1" stroke-width="1" stroke-dasharray="3,3">
                                <animateTransform attributeName="transform"
                                                  type="rotate"
                                                  from="0 0 0"
                                                  to="360 0 0"
                                                  dur="20s"
                                                  repeatCount="indefinite"/>
                            </circle>
                        </g>
                    </svg>
                </div>
            </section>

            <!-- Revenue Growth Section -->
            <section class="gh-consulting-section revenue-growth-section reverse">
                <div class="gh-consulting-section-content">
                    <h2>Revenue Growth</h2>
                    <p class="gh-consulting-section-intro">Transform technology investments into measurable business outcomes and sustainable revenue growth through customer-centric strategies.</p>
                    
                    <ul class="gh-consulting-features">
                        <li>Business model optimization</li>
                        <li>Customer success programs</li>
                        <li>Revenue stream diversification</li>
                        <li>Market expansion strategies</li>
                    </ul>
                    
                    <div class="gh-consulting-stats">
                        <div class="gh-stat">
                            <span class="gh-stat-value">$45M+</span>
                            <span class="gh-stat-label">Revenue Generated</span>
                        </div>
                        <div class="gh-stat">
                            <span class="gh-stat-value">40%</span>
                            <span class="gh-stat-label">Profit Margins</span>
                        </div>
                    </div>
                </div>
                <div class="gh-consulting-section-graphic">
                    <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                        <defs>
                            <linearGradient id="revenue-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                <stop offset="0%" style="stop-color:#8b5e3c;stop-opacity:0.2"/>
                                <stop offset="100%" style="stop-color:#8b5e3c;stop-opacity:0.1"/>
                            </linearGradient>
                        </defs>

                        <!-- Background -->
                        <rect x="20" y="20" width="160" height="160" fill="url(#revenue-gradient)" rx="10"/>

                        <!-- Growth chart -->
                        <g transform="translate(40,160)" fill="none" stroke="#8b5e3c" stroke-width="2">
                            <path d="M0,0 C30,-30 60,-45 120,-100">
                                <animate attributeName="d" 
                                         values="M0,0 C30,-30 60,-45 120,-100;
                                                 M0,0 C30,-40 60,-55 120,-110;
                                                 M0,0 C30,-30 60,-45 120,-100" 
                                         dur="4s" 
                                         repeatCount="indefinite"/>
                            </path>
                            
                            <!-- Animated data point -->
                            <circle cx="120" cy="-100" r="5" fill="#8b5e3c">
                                <animate attributeName="r" values="5;7;5" dur="2s" repeatCount="indefinite"/>
                                <animate attributeName="opacity" values="1;0.5;1" dur="2s" repeatCount="indefinite"/>
                            </circle>
                        </g>

                        <!-- Currency symbols -->
                        <g fill="#8b5e3c" opacity="0.8">
                            <text x="60" y="80" font-size="14">$</text>
                            <text x="90" y="60" font-size="14">€</text>
                            <text x="120" y="40" font-size="14">¥</text>
                            
                            <!-- Floating animation -->
                            <animateTransform attributeName="transform"
                                              type="translate"
                                              values="0 0; 0 -5; 0 0"
                                              dur="3s"
                                              repeatCount="indefinite"/>
                        </g>

                        <!-- Percentage indicators -->
                        <g transform="translate(140,70)">
                            <text x="0" y="0" font-size="12" fill="#8b5e3c">+40%</text>
                            <animate attributeName="opacity" values="1;0.3;1" dur="2s" repeatCount="indefinite"/>
                        </g>
                    </svg>
                </div>
            </section>
        </div>

        {{> "consulting-cta"}}
    </div>
</main> 