{{!< default}}

<main class="gh-main gh-outer">
  <div class="gh-inner">
    <section class="gh-consulting-header gh-canvas">
      <h1 class="gh-article-title">Technology Consulting Services</h1>
      <p class="gh-article-excerpt">Strategic guidance and implementation
        expertise to transform your business through technology</p>
    </section>

    <div class="gh-consulting-sections">
      <!-- Technology Transformation Section -->
      <section class="gh-consulting-section tech-transform-section">
        <div class="gh-consulting-section-content">
          <h2>Technology Transformation</h2>
          <p class="gh-consulting-section-intro">Modernize your technology
            infrastructure and accelerate digital transformation initiatives
            with proven expertise in cloud migration and emerging technologies.</p>

          <ul class="gh-consulting-features">
            <li>Enterprise-scale cloud migration strategies</li>
            <li>Open RAN implementation and optimization</li>
            <li>Legacy system modernization</li>
            <li>Technology stack assessment and roadmapping</li>
          </ul>

          <div class="gh-consulting-stats">
            <div class="gh-stat">
              <span class="gh-stat-value">$300M+</span>
              <span class="gh-stat-label">Transformation Projects</span>
            </div>
            <div class="gh-stat">
              <span class="gh-stat-value">$14B</span>
              <span class="gh-stat-label">Open RAN Implementation</span>
            </div>
          </div>
        </div>
        <div class="gh-consulting-section-graphic">
          <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient
                id="tech-gradient"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop
                  offset="0%"
                  style="stop-color:#8b3e3c;stop-opacity:0.15"
                />
                <stop
                  offset="100%"
                  style="stop-color:#8b3e3c;stop-opacity:0.05"
                />
              </linearGradient>

              <filter id="tech-glow">
                <feGaussianBlur stdDeviation="1.5" result="coloredBlur" />
                <feMerge>
                  <feMergeNode in="coloredBlur" />
                  <feMergeNode in="SourceGraphic" />
                </feMerge>
              </filter>
            </defs>

            <!-- Legacy to Cloud Migration Path -->
            <path
              d="M40,160 C60,160 60,120 100,120 C140,120 140,80 160,80"
              fill="none"
              stroke="#8b3e3c"
              stroke-width="2"
              stroke-dasharray="4 4"
              opacity="0.6"
            >
              <animate
                attributeName="stroke-dashoffset"
                values="24;0"
                dur="3s"
                repeatCount="indefinite"
              />
            </path>

            <!-- Legacy System -->
            <g transform="translate(40,160)">
              <rect
                x="-15"
                y="-15"
                width="30"
                height="30"
                fill="#66413f"
                rx="4"
                opacity="0.8"
              />
              <rect
                x="-10"
                y="-10"
                width="20"
                height="4"
                fill="#f5e6e6"
                opacity="0.9"
              />
              <rect
                x="-10"
                y="-2"
                width="12"
                height="4"
                fill="#f5e6e6"
                opacity="0.9"
              />
            </g>

            <!-- Cloud Platform -->
            <g transform="translate(160,80)">
              <path
                d="M-20,-10 A20,20 0 0,1 0,-20 A15,15 0 0,1 15,-5 A20,20 0 0,1 20,15 A20,20 0 0,1 -20,15 A20,20 0 0,1 -20,-10"
                fill="#8b3e3c"
                opacity="0.8"
              >
                <animate
                  attributeName="d"
                  dur="4s"
                  repeatCount="indefinite"
                  values="M-20,-10 A20,20 0 0,1 0,-20 A15,15 0 0,1 15,-5 A20,20 0 0,1 20,15 A20,20 0 0,1 -20,15 A20,20 0 0,1 -20,-10;
                                                 M-22,-12 A20,20 0 0,1 2,-22 A15,15 0 0,1 17,-7 A20,20 0 0,1 22,13 A20,20 0 0,1 -18,17 A20,20 0 0,1 -22,-12;
                                                 M-20,-10 A20,20 0 0,1 0,-20 A15,15 0 0,1 15,-5 A20,20 0 0,1 20,15 A20,20 0 0,1 -20,15 A20,20 0 0,1 -20,-10"
                />
              </path>
            </g>

            <!-- Transformation Elements -->
            <g filter="url(#tech-glow)">
              <!-- Data Packets -->
              <circle r="3" fill="#754544">
                <animateMotion
                  path="M40,160 C60,160 60,120 100,120 C140,120 140,80 160,80"
                  dur="2s"
                  repeatCount="indefinite"
                />
              </circle>
              <circle r="3" fill="#754544">
                <animateMotion
                  path="M40,160 C60,160 60,120 100,120 C140,120 140,80 160,80"
                  dur="2s"
                  begin="0.7s"
                  repeatCount="indefinite"
                />
              </circle>

              <!-- Modern Tech Stack -->
              <g transform="translate(100,120)">
                <rect
                  x="-25"
                  y="-15"
                  width="50"
                  height="30"
                  fill="#66413f"
                  rx="6"
                  opacity="0.2"
                />
                <g stroke="#8b3e3c" stroke-width="1.5" opacity="0.8">
                  <path d="M-15,-5 L15,-5">
                    <animate
                      attributeName="stroke-dasharray"
                      values="30,30;0,30;30,30"
                      dur="3s"
                      repeatCount="indefinite"
                    />
                  </path>
                  <path d="M-15,5 L5,5">
                    <animate
                      attributeName="stroke-dasharray"
                      values="20,20;0,20;20,20"
                      dur="3s"
                      begin="1s"
                      repeatCount="indefinite"
                    />
                  </path>
                </g>
              </g>
            </g>
          </svg>
        </div>
      </section>

      <!-- Solutions Engineering Section -->
      <section
        class="gh-consulting-section solutions-engineering-section reverse"
      >
        <div class="gh-consulting-section-content">
          <h2>Solutions Engineering</h2>
          <p class="gh-consulting-section-intro">Design and implement scalable,
            cloud-native solutions that drive operational efficiency and enable
            business agility.</p>

          <ul class="gh-consulting-features">
            <li>Cloud-native architecture design</li>
            <li>Infrastructure automation</li>
            <li>DevOps transformation</li>
            <li>Performance optimization</li>
          </ul>

          <div class="gh-consulting-stats">
            <div class="gh-stat">
              <span class="gh-stat-value">55%</span>
              <span class="gh-stat-label">Cost Efficiency Improvement</span>
            </div>
            <div class="gh-stat">
              <span class="gh-stat-value">3x</span>
              <span class="gh-stat-label">Deployment Speed Increase</span>
            </div>
          </div>
        </div>
        <div class="gh-consulting-section-graphic">
          <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient
                id="solutions-gradient"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#c8d6af;stop-opacity:0.2" />
                <stop
                  offset="100%"
                  style="stop-color:#c8d6af;stop-opacity:0.1"
                />
              </linearGradient>
            </defs>

            <!-- Background -->
            <rect
              x="20"
              y="20"
              width="160"
              height="160"
              fill="url(#solutions-gradient)"
              rx="10"
            />

            <!-- Grid pattern -->
            <g stroke="#c8d6af" stroke-width="0.5" opacity="0.3">
              <path d="M40,40 h120 M40,80 h120 M40,120 h120 M40,160 h120" />
              <path d="M40,40 v120 M80,40 v120 M120,40 v120 M160,40 v120" />
            </g>

            <!-- Animated gears -->
            <g transform="translate(100,100)">
              <path
                d="M0,-30 L5,-20 L15,-25 L20,-15 L30,-20 L25,-10 L35,-5 L30,5 L40,10 L25,15 L30,25 L20,20 L15,30 L5,20 L0,30 L-5,20 L-15,25 L-20,15 L-30,20 L-25,10 L-35,5 L-30,-5 L-40,-10 L-25,-15 L-30,-25 L-20,-20 L-15,-30 L-5,-20 Z"
                fill="#c8d6af"
                opacity="0.8"
              >
                <animateTransform
                  attributeName="transform"
                  type="rotate"
                  from="0 0 0"
                  to="360 0 0"
                  dur="10s"
                  repeatCount="indefinite"
                />
              </path>
            </g>

            <!-- Code blocks -->
            <g transform="translate(50,70)">
              <rect x="0" y="0" width="60" height="4" fill="#c8d6af" rx="2">
                <animate
                  attributeName="width"
                  values="60;40;60"
                  dur="3s"
                  repeatCount="indefinite"
                />
              </rect>
              <rect x="0" y="10" width="40" height="4" fill="#c8d6af" rx="2">
                <animate
                  attributeName="width"
                  values="40;50;40"
                  dur="3s"
                  repeatCount="indefinite"
                  begin="1s"
                />
              </rect>
              <rect x="0" y="20" width="50" height="4" fill="#c8d6af" rx="2">
                <animate
                  attributeName="width"
                  values="50;30;50"
                  dur="3s"
                  repeatCount="indefinite"
                  begin="2s"
                />
              </rect>
            </g>
          </svg>
        </div>
      </section>

      <!-- SRE & Operations Section -->
      <section class="gh-consulting-section sre-operations-section">
        <div class="gh-consulting-section-content">
          <h2>SRE & Operations Support</h2>
          <p class="gh-consulting-section-intro">Build and optimize world-class
            operations teams and processes that ensure reliability, scalability,
            and exceptional service delivery.</p>

          <ul class="gh-consulting-features">
            <li>SRE practice implementation</li>
            <li>Global operations center design</li>
            <li>Service level optimization</li>
            <li>Team building and training</li>
          </ul>

          <div class="gh-consulting-stats">
            <div class="gh-stat">
              <span class="gh-stat-value">90%</span>
              <span class="gh-stat-label">CSAT Improvement</span>
            </div>
            <div class="gh-stat">
              <span class="gh-stat-value">9</span>
              <span class="gh-stat-label">Global Excellence Centers</span>
            </div>
          </div>
        </div>
        <div class="gh-consulting-section-graphic">
          <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient
                id="ops-gradient"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop offset="0%" style="stop-color:#d6bbb1;stop-opacity:0.2" />
                <stop
                  offset="100%"
                  style="stop-color:#d6bbb1;stop-opacity:0.1"
                />
              </linearGradient>
            </defs>

            <!-- Background circle -->
            <circle cx="100" cy="100" r="90" fill="url(#ops-gradient)" />

            <!-- Monitoring graph -->
            <g
              transform="translate(40,100)"
              fill="none"
              stroke="#d6bbb1"
              stroke-width="2"
            >
              <path d="M0,0 L20,-20 L40,-10 L60,-30 L80,-15 L100,-40 L120,-20">
                <animate
                  attributeName="d"
                  values="M0,0 L20,-20 L40,-10 L60,-30 L80,-15 L100,-40 L120,-20;
                                                 M0,0 L20,-15 L40,-25 L60,-20 L80,-35 L100,-25 L120,-30;
                                                 M0,0 L20,-20 L40,-10 L60,-30 L80,-15 L100,-40 L120,-20"
                  dur="5s"
                  repeatCount="indefinite"
                />
              </path>
            </g>

            <!-- Status indicators -->
            <g transform="translate(60,60)">
              <circle cx="0" cy="0" r="5" fill="#d6bbb1">
                <animate
                  attributeName="r"
                  values="5;7;5"
                  dur="2s"
                  repeatCount="indefinite"
                />
                <animate
                  attributeName="opacity"
                  values="1;0.5;1"
                  dur="2s"
                  repeatCount="indefinite"
                />
              </circle>
              <circle cx="40" cy="0" r="5" fill="#d6bbb1">
                <animate
                  attributeName="r"
                  values="5;7;5"
                  dur="2s"
                  repeatCount="indefinite"
                  begin="0.6s"
                />
                <animate
                  attributeName="opacity"
                  values="1;0.5;1"
                  dur="2s"
                  repeatCount="indefinite"
                  begin="0.6s"
                />
              </circle>
              <circle cx="80" cy="0" r="5" fill="#d6bbb1">
                <animate
                  attributeName="r"
                  values="5;7;5"
                  dur="2s"
                  repeatCount="indefinite"
                  begin="1.2s"
                />
                <animate
                  attributeName="opacity"
                  values="1;0.5;1"
                  dur="2s"
                  repeatCount="indefinite"
                  begin="1.2s"
                />
              </circle>
            </g>

            <!-- Rotating metrics -->
            <g transform="translate(100,100)">
              <circle
                cx="0"
                cy="0"
                r="40"
                fill="none"
                stroke="#d6bbb1"
                stroke-width="1"
                stroke-dasharray="3,3"
              >
                <animateTransform
                  attributeName="transform"
                  type="rotate"
                  from="0 0 0"
                  to="360 0 0"
                  dur="20s"
                  repeatCount="indefinite"
                />
              </circle>
            </g>
          </svg>
        </div>
      </section>

      <!-- Revenue Growth Section -->
      <section class="gh-consulting-section revenue-growth-section reverse">
        <div class="gh-consulting-section-content">
          <h2>Revenue Growth</h2>
          <p class="gh-consulting-section-intro">Transform technology
            investments into measurable business outcomes and sustainable
            revenue growth through customer-centric strategies.</p>

          <ul class="gh-consulting-features">
            <li>Business model optimization</li>
            <li>Customer success programs</li>
            <li>Revenue stream diversification</li>
            <li>Market expansion strategies</li>
          </ul>

          <div class="gh-consulting-stats">
            <div class="gh-stat">
              <span class="gh-stat-value">$45M+</span>
              <span class="gh-stat-label">Revenue Generated</span>
            </div>
            <div class="gh-stat">
              <span class="gh-stat-value">40%</span>
              <span class="gh-stat-label">Profit Margins</span>
            </div>
          </div>
        </div>
        <div class="gh-consulting-section-graphic">
          <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
            <defs>
              <linearGradient
                id="revenue-gradient"
                x1="0%"
                y1="0%"
                x2="100%"
                y2="100%"
              >
                <stop
                  offset="0%"
                  style="stop-color:#6b6b7b;stop-opacity:0.15"
                />
                <stop
                  offset="100%"
                  style="stop-color:#6b6b7b;stop-opacity:0.05"
                />
              </linearGradient>

              <filter id="revenue-glow">
                <feGaussianBlur stdDeviation="1.5" result="coloredBlur" />
                <feMerge>
                  <feMergeNode in="coloredBlur" />
                  <feMergeNode in="SourceGraphic" />
                </feMerge>
              </filter>
            </defs>

            <!-- Background shape -->
            <path
              d="M20,100 Q60,20 100,100 T180,100"
              fill="none"
              stroke="#6b6b7b"
              stroke-width="2"
              opacity="0.3"
            />

            <!-- Growth curve -->
            <path
              d="M40,160 Q70,140 100,120 T160,80"
              fill="none"
              stroke="#6b6b7b"
              stroke-width="3"
              stroke-linecap="round"
              opacity="0.8"
            >
              <animate
                attributeName="d"
                dur="4s"
                repeatCount="indefinite"
                values="M40,160 Q70,140 100,120 T160,80;
                                             M40,160 Q70,130 100,110 T160,70;
                                             M40,160 Q70,140 100,120 T160,80"
              />
            </path>

            <!-- Data points -->
            <g filter="url(#revenue-glow)">
              <circle cx="40" cy="160" r="4" fill="#6b6b7b">
                <animate
                  attributeName="r"
                  values="4;5;4"
                  dur="2s"
                  repeatCount="indefinite"
                />
              </circle>
              <circle cx="100" cy="120" r="4" fill="#6b6b7b">
                <animate
                  attributeName="r"
                  values="4;5;4"
                  dur="2s"
                  repeatCount="indefinite"
                  begin="0.5s"
                />
              </circle>
              <circle cx="160" cy="80" r="4" fill="#6b6b7b">
                <animate
                  attributeName="r"
                  values="4;5;4"
                  dur="2s"
                  repeatCount="indefinite"
                  begin="1s"
                />
              </circle>
            </g>

            <!-- Floating indicators -->
            <g font-family="var(--font-sans)" font-size="12" fill="#6b6b7b">
              <text x="170" y="70" opacity="0.8">+40%</text>
              <text x="110" y="110" opacity="0.6">+25%</text>
              <text x="50" y="150" opacity="0.4">+10%</text>
            </g>

            <!-- Currency symbols -->
            <g
              font-family="var(--font-sans)"
              font-size="14"
              fill="#6b6b7b"
              opacity="0.6"
            >
              <text x="60" y="80">$</text>
              <text x="90" y="60">€</text>
              <text x="120" y="40">¥</text>
              <animateTransform
                attributeName="transform"
                type="translate"
                values="0 0; 0 -5; 0 0"
                dur="3s"
                repeatCount="indefinite"
              />
            </g>
          </svg>
        </div>
      </section>
    </div>
  </div>
</main>